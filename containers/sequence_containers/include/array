#ifndef __ARRAY__
#define __ARRAY__

#include <cstddef>

namespace my_std {
	template<class T, std::size_t N>
	struct array {
		T arr[N];
		
		using reference = T&;
		using const_reference = const T&;
		using iterator = T*;
		using const_iterator = const T*;

						//--------Element Access--------

		constexpr reference at(std::size_t i) {
			if(i >= N)
				throw std::out_of_range("Index out of Range\n");
			return arr[i];
		}
		constexpr const_reference at(std::size_t i) const {
			if(i >= N)
				throw std::out_of_range("Index out of Range\n");
			return arr[i];
		}
		
		constexpr reference operator[](std::size_t i) noexcept { return arr[i]; }
		constexpr const_reference operator[](std::size_t i) const noexcept { return arr[i]; }
		
		constexpr reference front() { return *begin(); }
		constexpr const_reference front() const { return *begin(); }

		constexpr reference back() { return *(end()-1); }
		constexpr const_reference back() const { return *(end()-1); }

		constexpr T* data() noexcept { return arr; }
		constexpr const T* data() const noexcept { return arr; }
		
						//----------Iterators-----------
		constexpr iterator begin() noexcept { return arr; }
		constexpr const_iterator begin() const noexcept { return arr; }
		constexpr const_iterator cbegin() const noexcept { return arr; }

		constexpr bool empty() { return N == 0; }
		constexpr std::size_t size() const noexcept { return N; }
	};

#endif
