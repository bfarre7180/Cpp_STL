#ifndef __ARRAY__
#define __ARRAY__

#include <cstddef>

namespace my_std {
	template<class T, std::size_t N>
	struct array {
		T arr[N];

		constexpr T& at(std::size_t i) {
			if(i >= N)
				throw std::out_of_range("Index out of Range\n");
			return arr[i];
		}
		constexpr const T& at(std::size_t i) const {
			if(i >= N)
				throw std::out_of_range("Index out of Range\n");
			return arr[i];
		}
		constexpr bool empty() { return N == 0; }
		constexpr T& operator[](std::size_t i) noexcept { return arr[i]; }
		constexpr const T& operator[](std::size_t i) const noexcept { return arr[i]; }
		constexpr T* data() noexcept { return arr; }
		constexpr const T* data() const noexcept { return arr; }
		constexpr std::size_t size() const noexcept { return N; }
	};

#endif
